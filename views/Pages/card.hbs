<section>
    <div class="container-fluid">
        <div class="row justify-content-center m-2">
            
            {{#each product}}
                <div class="card col-sm-12 col-md-6 col-lg-3 col-xl-2">
                    <div>
                        <img class="card-img-top" style="height:250px;" src="{{this.image}}" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.bookName}}</h5>
                        <p class="card-text">{{this.authorName}}</p>
                        <p class="card-text">{{this.publishedDate}}</p>
                        <p class="card-text description">{{this.description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>